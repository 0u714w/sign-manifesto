@tailwind base;
@tailwind components;
@tailwind utilities;

@import "tailwindcss";

@font-face {
  font-family: 'VideoCond';
  src: url('/fonts/VideoCond-Light.ttf') format('truetype');
  font-weight: 300;
}
@font-face {
  font-family: 'VideoCond';
  src: url('/fonts/VideoCond-Regular.ttf') format('truetype');
  font-weight: 400;
}

:root {
  --background: #ffffff;
  --foreground: #171717;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
}

/* Remove dark mode media query to prevent white text on dark background */

body {
  background: var(--background);
  color: var(--foreground);
  font-family: 'VideoCond', Arial, Helvetica, sans-serif;
  font-size: 1.5rem;
  line-height: 1.25;
}

canvas {
  width: 100% !important;
  height: auto !important;
  display: block;
}

/* Hide p5.js loading text */
.p5Canvas {
  position: relative;
}

.p5Canvas::after {
  display: none !important;
}

/* Hide any loading text from p5.js */
div[style*="position: absolute"][style*="bottom: 0"] {
  display: none !important;
}